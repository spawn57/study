{
  "name": "be",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "be/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/be",
        "main": "be/src/main.ts",
        "tsConfig": "be/tsconfig.app.json",
        "assets": ["be/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "be/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "be:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "be:build:development"
        },
        "production": {
          "buildTarget": "be:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["be/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "be/jest.config.ts"
      }
    }
  },
  "tags": []
}
